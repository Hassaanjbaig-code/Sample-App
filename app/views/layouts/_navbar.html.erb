<% nav = {
  Home:  { link: root_url },
  Help:  { link: help_url },
} %>

<header class="navbar navbar-expand-md navbar-inverse bg-black">
  <div class="container">
    <%= link_to "Sample App", "#", id: "logo", class: "navbar-brand" %>

    <!-- Toggler for mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto gap-3">
        <% nav.each do | key, value | %>
          <li class="nav-item">
            <%= link_to key, value[:link], class: "nav-link text-white" %>
          </li>
        <% end %>

        <% if current_user %>
          <li class="nav-item">
            <%= link_to "User", "#", class: "nav-link text-white" %>
          </li>

          <li class="nav-item dropdown">
            <a href="#" id="account" class="nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Account
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user, class: "dropdown-item" %></li>
              <li><%= link_to "Settings", '#', class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Log out", log_out_path, data: { "turbo-method": :delete }, class: "dropdown-item" %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Log in", log_in_path, class: "nav-link text-white" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
